{#
/**
 * @file
 * CLARIN bootstrap theme implementation for a page title.
 *
 * Available variables:
 * - title_attributes: HTML attributes for the page title element.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title: The page title, for use in the actual content.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 * - field_contributors: Sub-title used for "Impact story" content type pages
 */
#}
{%
  set classes = [
    'title',
    'page-title',
  ]
%}

{{ title_prefix }}
{% if title %}
  <div class="title-wrapper">
    <h1{{ title_attributes.addClass(classes) }}>{{ title }}</h1>
    {% if field_contributors is not empty %}                        
      <div><label>Contributors:&nbsp;</label>{{ field_contributors }}</div>
    {% endif %} 
  </div>
{% endif %}
{{ title_suffix }}